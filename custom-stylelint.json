{
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "indentation": 2,
    "declaration-colon-space-before": "never",
    "declaration-colon-space-after": "always",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use"]
      }
    ],
    "at-rule-disallowed-list": ["debug"]
  }
}
